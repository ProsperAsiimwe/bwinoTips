@model BwinoTips.WebUI.Models.Adverts.AdViewModel
@{
    ViewBag.Title = "New Adverts";
    bool isAdmin = User.IsInRole("Admin") || User.IsInRole("Developer");
    string action, cancel_url, buttonText, instr, glyph;


        cancel_url = Url.Action("Index");
        action = "Create";
        buttonText = "Create Advert";
        instr = "Complete the form below and click Create to add a new Advert";
        glyph = "fa fa-plus";
        ViewBag.Title = "New Free Advert";
   
}

<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h2 class="fs-18 font-weight-bold mb-0">Create A New Ad!</h2>
                    <div class="inbox-toolbar btn-toolbar">
                        <div class="btn-group">
                            @Html.Bootstrap().ActionLinkButton("Back", "Index", "Advert").Class("btn btn-danger").PrependIcon("fa fa-arrow-left").HtmlAttributes(new { style = "color:white;", title = "Homepage" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
              @using (Html.BeginForm(action, "Advert", FormMethod.Post, new { enctype = "multipart/form-data" }))
              {
                    @Html.AntiForgeryToken()                 
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="row">
                        <div class="col-md-6 pr-md-1">
                            <div class="form-group">
                                <div class="font-weight-600">
                                    @Html.LabelFor(m => m.AdImages)
                                    @Html.TextBoxFor(p => p.AdImages, new { @multiple = "multiple", type = "file", id = "file-0", required = "" })
                                    @Html.ValidationMessageFor(m => m.AdImages, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                       
                    </div>

                    <div class="card-footer">
                        <button type="submit" class="btn btn-fill btn-primary">@buttonText</button>
                    </div>

                }
            </div>

        </div>
    </div>
</div>

