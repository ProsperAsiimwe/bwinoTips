@model BwinoTips.WebUI.Models.Leagues.LeagueViewModel

@{
    ViewBag.Title = "Edit League";
    string action, cancel_url, buttonText, instr, glyph;
    bool isAdmin = PageData["isAdmin"];
   
        cancel_url = Url.Action("Show", new { LeagueId = Model.LeagueId });
        action = "Update";
        buttonText = "Update League";
        instr = "Modify the details and click Update to apply changes";
        glyph = "fa fa-thumbs-up";
        ViewBag.Title = "Update League";
    
}
	<!-- post wraper start-->
<section class="body-color">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">
                <div class="contact-box ts-grid-box">
                    <h3>@ViewBag.Title</h3>

                    <div class="text-right">
                        <h4>@Html.Bootstrap().ActionLink("Back", "Index", "League").HtmlAttributes(new { title = "Homepage", @class = "" })</h4>
                    </div>


                    @using (var f = Html.Bootstrap().Begin(new Form(action, "League").FormMethod(FormMethod.Post)))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.LeagueId)
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="col-md-6">
                                @f.FormGroup().TextBoxFor(p => p.Name).Placeholder().Class("default-input").Label()
                            </div>

                            <div class="col-md-6">
                                @f.FormGroup().TextBoxFor(p => p.Country).Placeholder().Class("default-input").Label()
                            </div>
                        </div>
                        
                            <div class="text-right">
                                <button class="btn btn-primary solid blank" type="submit">@buttonText</button><span><i @glyph></i></span>
                            </div>

                    }


                </div><!-- grid box end -->
            </div>
            <!-- col end-->
            <!-- col end-->


        </div>
        <!-- row end-->
    </div>
    <!-- container end-->
</section>
<!-- post wraper end-->



