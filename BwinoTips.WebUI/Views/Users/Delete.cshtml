@model BwinoTips.Domain.Entities.ApplicationUser
@{
    string roleName = PageData["roleName"];
    string roleTitle = PageData["roleTitle"];
    ViewBag.Title = "Delete " + roleTitle;
    string[] roles = new BwinoTips.WebUI.Infrastructure.Helpers.UserHelper(Model).GetUserRoles();
}
<div class="row">
    <div class="col-md-12 col-lg-12 col-xl-12">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h2 class="fs-18 font-weight-bold mb-0">@ViewBag.Title</h2>
                <div class="inbox-toolbar btn-toolbar">
                    <div class="btn-group">
                        @Html.Bootstrap().ActionLink("", "Edit").Class("btn btn-primary").RouteValues(new { id = Model.DisplayId }).AppendIcon("fa fa-edit").HtmlAttributes(new { title = "Edit User", style = "color:white" })
                    </div>
                    <div class="btn-group ml-1 d-none d-lg-flex">
                        @Html.Bootstrap().ActionLink("", "ResetPassword").Class("btn btn-success").RouteValues(new { id = Model.DisplayId }).AppendIcon("fa fa-lock").HtmlAttributes(new { title = "Reset Password", style = "color:white" })
                        @Html.Bootstrap().ActionLink("", "Delete").RouteValues(new { id = Model.DisplayId }).Class("text-center btn btn-danger").AppendIcon("fa fa-trash").HtmlAttributes(new { title = "Delete User", style = "color:white" })
                        @Html.Bootstrap().ActionLink("", "Index", "Users").Class("btn btn-info").HtmlAttributes(new { title = "Go Back" }).AppendIcon("fa fa-arrow-left")

                    </div>
                </div>
            </div>

            <div class="card-body">

                <div class=table-responsive>
                    <!--<table class="table table-sm table-nowrap card-table">-->
                    <table class="table display table-bordered table-striped table-hover bg-white m-0 card-table">

                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Email Address</th>
                                <th>Role</th>
                                <th>Delete?</th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td>@Model.FullName</td>
                                <td>@Html.EmailLink(Model.Email)</td>
                                <td>@Html.ParseList(roles, "list-unstyled")</td>
                                <td>
                                    @using (Html.BeginForm("Destroy", "Users", new { id = Model.DisplayId }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.Bootstrap().SubmitButton().Text("Delete User").Style(ButtonStyle.Danger).AppendIcon("fa fa-remove")
                                    }
                                </td>
                            </tr>

                        </tbody>
                </table>
                </div>
            </div>
            </div>
    </div>
</div>


