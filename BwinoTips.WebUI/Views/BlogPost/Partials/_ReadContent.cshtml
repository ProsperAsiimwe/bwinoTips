@model BwinoTips.WebUI.Models.BlogPosts.BlogPostListViewModel

<section class="contact-area ptb-80">
    <div class="container">
        <div class="section-title">
            <h2>Posted Blogs</h2>
            <div class="bar"></div>
            @Html.Bootstrap().ActionLinkButton("New", "Create", "BlogPost")
        </div>

        <div class="row h-100 justify-content-center align-items-center">

            <div class="col-lg-12 col-md-12">
                <div class="table">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Author</th>
                                <th>Content</th>
                                <th>Image</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.BlogPosts.Count() > 0)
                            {
                                foreach (var item in Model.BlogPosts)
                                {

                                    <tr>
                                        <td>@item.Title</td>
                                        <td>@item.Author</td>
                                        <td>@item.Content</td>
                                        <td><img src="@(string.IsNullOrEmpty(item.FolderPath)? "~/Content/assets/img/extra-image/blogging.png": @Url.Content(item.FolderPath))" alt="image"></td>                                       
                                        <td>@Html.Bootstrap().ActionLinkButton("Delete", "Delete").RouteValues(new { id = item.BlogPostId })</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="6">There are no records matching your search criteria</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="shape1"><img src="~/Content/assets/img/shape1.png" alt="shape"></div>
    <div class="shape2 rotateme"><img src="~/Content/assets/img/shape2.svg" alt="shape"></div>
    <div class="shape3"><img src="~/Content/assets/img/shape3.svg" alt="shape"></div>
    <div class="shape4"><img src="~/Content/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape5"><img src="~/Content/assets/img/shape5.png" alt="shape"></div>
    <div class="shape6 rotateme"><img src="~/Content/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape7"><img src="~/Content/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape8 rotateme"><img src="~/Content/assets/img/shape2.svg" alt="shape"></div>
</section>
