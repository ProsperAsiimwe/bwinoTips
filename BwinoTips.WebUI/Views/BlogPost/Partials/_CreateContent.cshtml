@model BwinoTips.WebUI.Models.BlogPosts.BlogPostViewModel

@*@{
        ViewBag.Title = "Create";
    }*@
<section class="contact-area ptb-80">
    <div class="container">
        <div class="section-title">
            <h2>Create</h2>
            <div class="bar"></div>
           
            @Html.Bootstrap().ActionLinkButton("Back", "Read", "BlogPost")
        </div>

        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-lg-6 col-md-12">
                <img src="~/Content/assets/img/extra-image/blogging.png" alt="image">
                <img src="~/Content/assets/img/extra-image/team1.png" alt="image">
            </div>

            <div class="col-lg-6 col-md-12">
                @using (Html.BeginForm("Create", "BlogPost", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="row">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                @Html.Bootstrap().TextBoxFor(m => m.Title).Placeholder("Please enter blog title").ShowValidationMessage(true).HtmlAttributes(new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                @Html.Bootstrap().TextBoxFor(m => m.Author).Placeholder("Please enter the author's name").ShowValidationMessage(true).HtmlAttributes(new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Author, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                @Html.Bootstrap().TextAreaFor(m => m.Content).Placeholder("Please enter blog content.").ShowValidationMessage(true).HtmlAttributes(new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12">
                            <div class="form-group">
                                @Html.LabelFor(m => m.BlogImage)
                                @*<input type="file" name="ImageFile" required>*@
                                @Html.Bootstrap().FileFor(p => p.BlogImage)
                                @Html.ValidationMessageFor(m => m.BlogImage, "", new { @class = "text-danger" })

                            </div>
                        </div>

                        <div class="col-lg-12 col-md-12">
                            @Html.Bootstrap().SubmitButton().Class("btn btn-primary").Text("Post").AppendIcon("glyphicon glyphicon-thumbs-up")
                            <div class="clearfix"></div>
                        </div>

                    </div>

                }
            </div>
        </div>
    </div>

    <div class="shape1"><img src="~/Content/assets/img/shape1.png" alt="shape"></div>
    <div class="shape2 rotateme"><img src="~/Content/assets/img/shape2.svg" alt="shape"></div>
    <div class="shape3"><img src="~/Content/assets/img/shape3.svg" alt="shape"></div>
    <div class="shape4"><img src="~/Content/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape5"><img src="~/Content/assets/img/shape5.png" alt="shape"></div>
    <div class="shape6 rotateme"><img src="~/Content/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape7"><img src="~/Content/assets/img/shape4.svg" alt="shape"></div>
    <div class="shape8 rotateme"><img src="~/Content/assets/img/shape2.svg" alt="shape"></div>
</section>
