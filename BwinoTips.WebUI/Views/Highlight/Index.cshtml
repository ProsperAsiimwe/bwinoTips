@model BwinoTips.WebUI.Models.Highlights.HighlightListViewModel
@{
    ViewBag.Title = "Highlights";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string companyName = Settings.COMPANY_NAME;
}
<!-- post wraper start-->
<section class="body-color">
    <div class="container" style="overflow-x:scroll">
        <div class="row">

            <div class="col-lg-12">
                <div class="contact-box ts-grid-box">
                    <h3>@ViewBag.Title</h3>

                      <div class="text-right">
                            @Html.Bootstrap().ActionLinkButton("Add New Highlight", "New", "Highlight").Class("btn btn-primary solid blank").AppendIcon("fa fa-plus").HtmlAttributes(new { style = "background-color:green;color:white;" })
                        </div>
                
                    <br /><hr />

                    <div class="row">
                        <table id="DonDada">

                            <thead>
                                <tr>
                                    <th>Upload Date:</th>
                                    <th>Title:</th>
                                    <th>URL Address Of Video:</th>
                                    <th>Competition:</th>
                                    <th>Image:</th>
                                    <th>Actions:</th>
                                </tr>
                            </thead>
                            <tbody>


                                @if (Model.Highlights.Count() > 0)
                                {
                                    foreach (var item in Model.Highlights)
                                    {

                                        <tr>
                                            <td>
                                                <div style="color:red">
                                                    <p>@item.UploadDate</p>
                                                </div>

                                            </td>

                                            <td>@item.Title</td>

                                            <td>@item.Url</td>

                                            <td>@item.Competition</td>

                                            <td>
                                                <img src="@(string.IsNullOrEmpty(item.FileName)? "~/Content/coreAssets/images/logo/shuaOddsLogoTrans.png": @Url.Content(string.Format("~/Content/HighlightGallery/{0}",item.FileName)))" alt="image" style="height:100px;max-width:100px;" />

                                            </td>

                                            <td>
                                                @Html.Bootstrap().ActionLinkButton("Delete", "Delete").RouteValues(new { id = item.HighlightId }).Style(ButtonStyle.Danger).Class("btn btn-primary solid blank").HtmlAttributes(new { style = "background-color:red;" })

                                            </td>


                                        </tr>


                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6">There are no records matching your search criteria</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>

                    @*<div class="clearfix">
                            <div class="pull-right">
                                <div class="pagination-panel">
                                    <div class="pagination-labels">@Model.PagingInfo.ItemsFrom to @Model.PagingInfo.ItemsTo of @Model.PagingInfo.TotalItems Ads</div>
                                    @Html.PageLinks(Model.PagingInfo, x => Url.Action("Index", new { page = x }))
                                </div>
                            </div>
                        </div>*@

                </div><!-- grid box end -->


            </div>
            <!-- col end-->
            <!-- col end-->


        </div>
        <!-- row end-->
    </div>
    <!-- container end-->
</section>
<!-- post wraper end-->
