@model BwinoTips.WebUI.Models.Highlights.HightlightViewModel
@{
    ViewBag.Title = "New Highlights";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string companyName = Settings.COMPANY_NAME;
}
<!-- post wraper start-->
<section class="body-color">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">
                <div class="contact-box ts-grid-box">
                    <h3>@ViewBag.Title</h3>

                    <div class="text-right">
                        <h4>@Html.Bootstrap().ActionLink("Back", "Index", "Highlight").HtmlAttributes(new { title = "Homepage", @class = "" })</h4>
                    </div>


                    @using (Html.BeginForm("New", "Highlight", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="col-md-6">
                                @Html.Bootstrap().TextBoxFor(m => m.Title).Placeholder("Home Team VS Away Team").ShowValidationMessage(true).HtmlAttributes(new { required = "" }).Label()
                                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                @Html.Bootstrap().TextBoxFor(m => m.Url).Placeholder("eg. www.hometeamvsawayteam/youtube.com").ShowValidationMessage(true).HtmlAttributes(new { required = "" }).Label()
                                @Html.ValidationMessageFor(m => m.Url, "", new { @class = "text-danger" })
                            </div>
                       </div>

                       <br />

                    <div class="row">
                        <div class="col-md-6">                   
                            @Html.Bootstrap().TextBoxFor(m => m.Competition).Placeholder("eg. English Premier League").ShowValidationMessage(true).HtmlAttributes(new { required = "" }).Label()
                            @Html.ValidationMessageFor(m => m.Competition, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6">
                            @Html.LabelFor(m => m.HighlightArts)
                            @Html.TextBoxFor(p => p.HighlightArts, new { @multiple = "multiple", type = "file", id = "file-0", required = "" })
                            @Html.ValidationMessageFor(m => m.HighlightArts, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="text-right">
                        <button class="btn btn-primary solid blank" type="submit">Upload</button>
                    </div>


                    }


                    </div><!-- grid box end -->
            </div>
            <!-- col end-->
            <!-- col end-->


        </div>
        <!-- row end-->
    </div>
    <!-- container end-->
</section>
<!-- post wraper end-->
