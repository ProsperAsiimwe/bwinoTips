@{
    ViewBag.Title = "Become A Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string roleName = "members";
    string roleTitle = "Member";
    string strCurrency = "Ugx.";

}

<!-- block wrapper start-->
<section class="block-wrapper mt-15 md-mb-30">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">

                    <div class="col-lg-6">
                        <div class="ts-title-item">
                            <h2 class="ts-cat-title ">
                                <span>Our Paid Subscriptions</span>
                            </h2>
                        </div><!-- Title end -->
                        <div class="post-list-box ts-list-post-box ts-grid-content">


                            <div class="post-content media">
                                <a>
                                    <img class="d-flex" src="~/Content/coreAssets/images/subscriptions/1.png" alt="">
                                </a>
                                <div class="media-body align-self-center">
                                    <h3 class="post-title">
                                        <a>Weekly Subscription</a>
                                    </h3>

                                    <span class="post-date-info">
                                        <i class="fa fa-money"></i>
                                        @strCurrency 10,000
                                    </span>

                                </div>
                            </div>
                            <!-- end item-->
                            <div class="post-content media">
                                <a>
                                    <img class="d-flex" src="~/Content/coreAssets/images/subscriptions/2.png" alt="">
                                </a>
                                <div class="media-body align-self-center">
                                    <h3 class="post-title">
                                        <a>Monthly Subscription</a>
                                    </h3>

                                    <span class="post-date-info">
                                        <i class="fa fa-money"></i>
                                        @strCurrency 100,000
                                    </span>

                                </div>
                            </div>
                            <!-- end item-->
                            <div class="post-content media">
                                <a>
                                    <img class="d-flex" src="~/Content/coreAssets/images/subscriptions/3.png" alt="">
                                </a>
                                <div class="media-body align-self-center">
                                    <h3 class="post-title">
                                        <a>Yearly Subscription</a>
                                    </h3>
                                    <span class="post-date-info">
                                        <i class="fa fa-money"></i>
                                        @strCurrency 1,000,000
                                    </span>
                                </div>
                            </div>
                            <!-- end item-->

                          
                         
                        </div>
                    </div>

                    <div class="col-lg-6">
                      
                   <br /><br /><br />
                        <h4 style="font-size:28px;color:forestgreen;">
                            <strong>
                                Register for a @Settings.COMPANY_NAME account and submit a service fee from our offers above to receive exclusive betting tips.
                            </strong>
                        </h4>

                      
                        <div class="text-right">
                            <br>
                            @Html.Bootstrap().ActionLinkButton("BECOME A " + roleTitle + " NOW!", "New").RouteValues(new { roleName = roleName }).Class("btn btn-primary solid blank")

                        </div>

                     </div>

                    </div>
            </div>
        </div>
    </div>
    </section>
