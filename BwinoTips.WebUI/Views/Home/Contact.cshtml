@{
    ViewBag.Title = "Contact " + Settings.COMPANY_NAME;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string companyName = Settings.COMPANY_NAME;
}

<div class="row">
    <div class="col-lg-4">
        <div class="card mb-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="mb-0 font-weight-600"><i class="fas fa-map-marker-alt"></i> Address</h6>
                    </div>
                    <div class="col-auto">                      
                        <span class="fs-13 font-weight-600 text-muted">@Settings.COMPANY_ADDRESS</span>
                    </div>
                </div>
                <hr>
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="mb-0 font-weight-600"><i class="fas fa-envelope"></i> Email</h6>
                    </div>
                    <div class="col-auto">
                        <span class="fs-13 font-weight-600 text-muted">@Settings.COMPANY_EMAIL</span>
                    </div>
                </div>
                <hr>
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="mb-0 font-weight-600"><i class="fas fa-mobile"></i> Help desk</h6>
                    </div>
                    <div class="col-auto">
                        <span class="fs-13 font-weight-600 text-muted">@Settings.COMPANY_PHONE</span>
                    </div>
                </div>
                <hr>
                <div class="row align-items-center">
                    <div class="col">
                        <h6 class="mb-0 font-weight-600">Website</h6>
                    </div>
                    <div class="col-auto">
                        <a href="#!" class="fs-13 font-weight-600">@Settings.COMPANY_URL</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="fs-17 font-weight-600 mb-0">Contact Form</h6>
                    </div>
                  
                </div>
            </div>
            <div class="card-body">
                <form>
                   
                 
                    <div class="row">
                        <div class="col-md-4 pr-md-1">
                            <div class="form-group">
                                <label class="font-weight-600">Name</label>
                                <input type="text" class="form-control" placeholder="City" value="Mike">
                            </div>
                        </div>
                        <div class="col-md-4 px-md-1">
                            <div class="form-group">
                                <label class="font-weight-600">Email</label>
                                <input type="text" class="form-control" placeholder="Country" value="">
                            </div>
                        </div>
                        <div class="col-md-4 px-md-1">
                            <div class="form-group">
                                <label class="font-weight-600">Subject</label>
                                <input type="text" class="form-control" placeholder="Country" value="">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="font-weight-600">Message</label>
                                <textarea rows="4" cols="80" class="form-control" placeholder="Describe the nature of your message"></textarea>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-fill btn-primary">Send Message</button>
            </div>
        </div>
    </div>
</div>












