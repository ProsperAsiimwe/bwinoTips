@model BwinoTips.WebUI.Models.Tickets.TicketListViewModel

@if (Model.Tickets.Count() > 0)
{
    foreach (var item in Model.Tickets)
    {       
            <div class="card mb-4">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="fs-12 font-weight-600 mb-0">@item.TicketType.ToString() Ticket,  @item.TotalOdds.ToString("0.00") Odd(s)</h6>
                        </div>
                    </div>
                </div>

                <div class="list-group list-group-flush">
                    @foreach (var game in item.Items)
                    {
                        <a class="list-group-item list-group-item-action">
                            <div class="d-flex align-items-center" data-toggle="tooltip" data-placement="right" data-title="@game.ExclusiveTip.Teams" data-original-title="" title="">
                                <div>
                                    <span class="avatar bg-success text-white rounded-circle">@game.ExclusiveTip.Odd</span>

                                </div>
                                <br />
                                <div class="flex-fill ml-3">
                                    <h6 class="fs-12 font-weight-600 mb-0">@game.ExclusiveTip.Teams </h6>
                                    <span class="badge badge-success">Tip: @game.ExclusiveTip.Tip</span>
                                    <small class="float-right text-muted">@game.ExclusiveTip.DateandTime</small>
                                </div>
                            </div>
                        </a>
                    }
                </div>


            </div>
  
    }
}
else
{
      <!--Feedback-->
    <div class="d-flex flex-column p-3 mb-3 bg-white shadow-sm rounded">
        <div class="header-pretitle text-muted fs-12 font-weight-bold text-uppercase mb-2">Why @Settings.COMPANY_ABBR ?</div>
        <div>
            <i class="fas fa fa-caret-up text-success"></i>
            <span class="mx-1 text-monospace">@Settings.COMPANY_NAME is the highest stakes sports prediction family in the world. We have a unique understanding of the sports we specialize in, the evolution of the sportsmen and teams involved in them and how this subsequently affects us as bettors.</span>

        </div>

        @*<div>
                <i class="fas fa fa-caret-up text-success"></i>
                <span class="mx-1 text-monospace">We have a dedicated expert team that analyses each game around the world based on form, statistics, past results, league tables as well as management to give you only the best possible outcome of a game.</span>

            </div>*@

    </div>
}
