@model BwinoTips.Domain.Entities.ExclusiveTip
@{
    ViewBag.Title = "Terminate Tip";
}

<div class="row">

    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h2 class="fs-18 font-weight-bold mb-0" style="color:red;">By doing this you'll terminate this tip and delete all it's associated data!</h2>
                    <div class="inbox-toolbar btn-toolbar">
                        <div class="btn-group">
                            @Html.Bootstrap().ActionLinkButton("Back", "Index", "ExclusiveTip").Class("btn btn-danger").PrependIcon("fa fa-arrow-left").HtmlAttributes(new { style = "color:white;", title = "Homepage" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <h4>
                    @Model.TipName
                </h4>

                @using (Html.BeginForm("Destroy", "ExclusiveTip", new { ExclusiveTipId = Model.ExclusiveTipId }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Bootstrap().SubmitButton().Text("Terminate Tip").Style(ButtonStyle.Danger).AppendIcon("fa fa-remove")
                }

            </div>

            </div>
    </div>
</div>


